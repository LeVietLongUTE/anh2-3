<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroud">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Products"
            android:textSize="35dp"
            android:gravity="center"
            android:textColor="#9A0CD6"
            android:textStyle="bold"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Filter"
            android:id="@+id/filter"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textStyle="bold"
            android:background="@drawable/edit"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="120dp"
            android:src="@drawable/filter"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/fabook"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:layout_width="150dp"
                android:src="@drawable/facebook"
                android:layout_marginRight="10dp"
                android:layout_height="150dp"/>
            <ImageView

                android:layout_weight="1"
                android:layout_width="150dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/twitter"
                android:layout_height="150dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/pro1"
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:text="Products One"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/pro2"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="150dp"
                    android:gravity="center"
                    android:text="Products Two"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="352$"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#D67E3C"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="268$"
                    android:textColor="#D67E3C"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#131313"></View>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/fabook"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:layout_width="150dp"
                android:src="@drawable/iconyoutube"
                android:layout_marginRight="10dp"
                android:layout_height="150dp"/>
            <ImageView

                android:layout_weight="1"
                android:layout_width="150dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/gg"
                android:layout_height="150dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/pro1"
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:text="Products One"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/pro2"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="150dp"
                    android:gravity="center"
                    android:text="Products Two"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="485$"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#1698E8"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="985$"
                    android:textColor="#1675AF"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lê Việt Long"
        android:textSize="25dp"
        android:layout_marginLeft="150dp"
        android:textStyle="bold"
        android:textColor="#000"/>
</LinearLayout>